<mvc:View xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml" controllerName="com.publix.servtech.controller.SelectStore">
	<semantic:MasterPage id="page" navButtonPress="onNavBack" showNavButton="true" title="Select a Store">
		<semantic:content>
			<VBox width="90%" direction="Column" id="__vbox0" alignItems="Center" class="sapUiMediumMarginTop">
				<items>
					<Label text="Enter Store Number" design="Bold" textAlign="Center"/>
					<Input width="100%" id="storeId" liveChange="handleLiveChange" submit="onPressGoToMaster" class="sapUiSmallMarginBottom" maxLength="4" />
					<Label text="{storeViewModel>/invalidStoreMsg}" textAlign="Center" design="Bold" class=" myRed sapUiSmallMarginTop" visible="{storeViewModel>/invalidStore}"/>
				</items>
			</VBox>
		</semantic:content>
		<semantic:mainAction>
			<semantic:MainAction text="Select" press="onPressGoToMaster" enabled="{storeViewModel>/validInput}" tooltip="Click ok to select Service Orders from the above Store"/>
		</semantic:mainAction>
	</semantic:MasterPage>
</mvc:View>